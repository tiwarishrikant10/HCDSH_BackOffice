@using Snagtick.Base.Models;
@model Snagtick.Models.country
<!-- Main content -->
<script type="text/javascript">
    function country_name_isExist() {
        StUtil.IsExist({
            ctrlId: 'country_name',
            controllerName: 'Json',
            actionName: 'IsCountryNameExist',
            parmVal: $('#country_name').val() + ',' + $('#country_id').val(),//saprated comma
        });
    }
</script>
<div class="row">
    <div class="col-lg-12">
        <div class="card-box">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Country Name<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(m => m.country_name, new { @class = "form-control", id = "country_name", placeholder = "Country Name", pattern = @RegExConst.General, required = "required", title = "Enter COuntry Name" ,@isExist = "true" })
                </div>
                <div class="form-group">
                    <label>@Html.CheckBoxFor(m => m.is_active, new { type = "checkbox" }) Enable</label>
                </div>
                <div class="box-footer">
                    @Html.HiddenFor(m => m.country_id)
                    <button type="submit" class="btn btn-primary btn-rounded w-md waves-effect waves-light">Submit</button>
                </div>
            }
        </div>
    </div>
</div>